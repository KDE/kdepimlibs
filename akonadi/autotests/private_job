    # build a diff-file
    git diff ${eachFile} > ${WHERE_DIFFS}/${LAST_DIR}/${eachFile}.diff
    if [ -z ${WHERE_DIFFS}/${LAST_DIR}/${eachFile}.diff ] ;
    then
      echo "rm ${WHERE_DIFFS}/${LAST_DIR}/${eachFile}.diff"
      rm ${WHERE_DIFFS}/${LAST_DIR}/${eachFile}.diff
    else
      wc -l ${WHERE_DIFFS}/${LAST_DIR}/${eachFile}.diff
      wc -l ${WHERE_DIFFS}/${LAST_DIR}/*.diff
    fi
